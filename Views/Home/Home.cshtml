@using Hotel.Check_In.Management.Models
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_HotelLayout.cshtml";
}

<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- Header -->
<header class="w3-container" style="padding-top:22px">
    <h5><b><i class="fa fa-dashboard"></i> My Dashboard</b></h5>
</header>

<div class="w3-row-padding w3-margin-bottom">
    <div class="w3-quarter">
        <div class="w3-container w3-red w3-padding-16">
            <div class="w3-left"></div>
            <div class="w3-right">
                <h3>@ViewBag.AvailableRooms</h3>
            </div>
            <div class="w3-clear"></div>
            <h4>Available Rooms</h4>
        </div>
    </div>
    <div class="w3-quarter">
        <div class="w3-container w3-blue w3-padding-16">
            <div class="w3-left"></div>
            <div class="w3-right">
                <h3>@ViewBag.OccupiedRooms</h3>
            </div>
            <div class="w3-clear"></div>
            <h4>Occupied Rooms</h4>
        </div>
    </div>
    <div class="w3-quarter">
        <div class="w3-container w3-teal w3-padding-16">
            <div class="w3-left"></div>
            <div class="w3-right">
                <h3>@ViewBag.ReservedRooms</h3>
            </div>
            <div class="w3-clear"></div>
            <h4>Reserved Rooms</h4>
        </div>
    </div>
    <div class="w3-quarter">
        <div class="w3-container w3-orange w3-text-white w3-padding-16">
            <div class="w3-right">
                <h3>@ViewBag.CheckIns</h3>
                <h3>@ViewBag.CheckOuts</h3>
            </div>
            <div class="w3-left"></div>
            <h4>Check-In</h4>
            <h4>Check-Out</h4>
        </div>
    </div>
</div>


<hr>

<div class="w3-container">
    <h5>Available Rooms</h5>
    <table class="w3-table w3-striped w3-bordered w3-border w3-hoverable w3-white">
        <tr>
            <th>Room Number</th>
            <th>Type</th>
            <th>Price</th>
        </tr>
        @foreach (var item in ViewBag.AvailableRoomsList as List<Rooms>)
        {
            <tr>
                <td>@item.RoomNo</td>
                <td>@item.RoomType</td>
                <td>@item.Price</td>
            </tr>
        }
    </table>
    <br>

</div>


<div class="w3-container">
    <h5>Occupied Rooms</h5>
    <table class="w3-table w3-striped w3-bordered w3-border w3-hoverable w3-white">
        <tr>
            <th>Room Number</th>
            <th>Type</th>
            <th>Price</th>
        </tr>
        @foreach (var item in ViewBag.OccupiedRoomsList as List<Rooms>)
        {
            <tr>
                <td>@item.RoomNo</td>
                <td>@item.RoomType</td>
                <td>@item.Price</td>
            </tr>
        }
    </table>
    <br>

</div>

<div class="w3-container">
    <h5>Reserved Rooms</h5>
    <table class="w3-table w3-striped w3-bordered w3-border w3-hoverable w3-white">
        <tr>
            <th>Room Number</th>
            <th>Type</th>
            <th>Price</th>
        </tr>
        @foreach (var item in ViewBag.ReservedRoomsList as List<Rooms>)
        {
            <tr>
                <td>@item.RoomNo</td>
                <td>@item.RoomType</td>
                <td>@item.Price</td>
            </tr>
        }
    </table>
    <br>

</div>



